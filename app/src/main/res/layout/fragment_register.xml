<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Register">

    <ImageView
        android:id="@+id/registerback_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_keyboard_backspace_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/register_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:fontFamily="@font/carrois_gothic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/register_tv11"
        />


    <TextView
        android:id="@+id/register_tv11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Fill in your details fast, to explore us!!\nReady to chat with your friends and family ??"
        android:textColor="#757575"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/profile_cv1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_tv1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_cv1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/register_tv11"
        app:layout_constraintBottom_toTopOf="@id/upload_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="50dp"
        >

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_account_circle_24"
            />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/upload_profile"
        android:layout_width="wrap_content"
        android:layout_height= "35dp"
        android:text="Upload Profile"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textAllCaps = "false"
        android:backgroundTint ="#454545"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_cv1"
        app:layout_constraintBottom_toTopOf="@id/register_tv2"

        />

    <TextView
        android:id="@+id/register_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/upload_profile"
        app:layout_constraintBottom_toTopOf="@id/fname_et1"

        />

    <EditText
        android:id="@+id/fname_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@id/register_tv3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_tv2" />

    <TextView
        android:id="@+id/register_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Last Name"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fname_et1"
        app:layout_constraintBottom_toTopOf="@id/lname_et2"
        />

    <EditText
        android:id="@+id/lname_et2"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@id/register_tv4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_tv3" />

    <TextView
        android:id="@+id/register_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/lname_et2"
        app:layout_constraintBottom_toTopOf="@id/email_et3"
        />

    <EditText
        android:id="@+id/email_et3"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@id/register_ll1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_tv4" />

    <LinearLayout
        android:id="@+id/register_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_et3"
        app:layout_constraintBottom_toTopOf="@id/register_btn"
        >
        <CheckBox
            android:id="@+id/terms_checkBox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/register_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I accept to the Terms and Conditions "
            android:textColor="@color/black"
            android:textSize="15sp"
            />

    </LinearLayout>


    <Button
        android:id="@+id/register_btn"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#454545"
        app:layout_constraintTop_toBottomOf="@id/register_ll1"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>