<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Login">

        <ImageView
            android:id="@+id/login_img1"
            android:layout_width="150dp"
            android:layout_height="75dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_img2"
            android:background="@drawable/app_logo_horizontal" />

        <ImageView
            android:id="@+id/login_img2"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/login_img1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_txt1"
            android:background="@drawable/login_img1" />

        <TextView
            android:id="@+id/login_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Meet people nearby you !!"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:fontFamily="@font/arimo"
            app:layout_constraintBottom_toTopOf="@id/login_txt2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_img2" />

        <TextView
            android:id="@+id/login_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Do everything you want with people nearby you, chat with them, send pictures, find them, connect with them, seek help, share your feelings and much more... \n \n We are here to help you connect with them."
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_txt3"
            app:layout_constraintTop_toBottomOf="@id/login_txt1" />

        <TextView
            android:id="@+id/login_txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Chat . Meet . Share . Repeat"
            android:textColor="#00B1AF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/get_start_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_txt2" />

        <Button
            android:id="@+id/get_start_btn"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Get Started"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#454545"
            app:layout_constraintTop_toBottomOf="@id/login_txt3"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>